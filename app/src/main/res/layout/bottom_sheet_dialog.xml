<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/standard_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp">

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/finishedFilterPicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_finished" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/categoryToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:singleSelection="true"
        android:paddingVertical="15dp">

        <Button
            android:id="@+id/buttonNone"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/none_icon"/>

        <Button
            android:id="@+id/buttonWork"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/work_icon" />

        <Button
            android:id="@+id/buttonSchool"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/school_icon" />

        <Button
            android:id="@+id/buttonHome"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/home_icon" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/notificationTimeToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:singleSelection="true"
        android:paddingVertical="15dp">

        <Button
            android:id="@+id/oneMinute"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/one_minute" />

        <Button
            android:id="@+id/fiveMinute"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/five_minute" />

        <Button
            android:id="@+id/tenMinute"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ten_minute" />

        <Button
            android:id="@+id/thirtyMinute"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thirty_minute" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

</LinearLayout>

